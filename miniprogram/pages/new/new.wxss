.new-box{
  background-color: #fff;
}

.new-item{
  padding: 20rpx;
  height: 60rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.text{
  width: 160rpx;
  font-size: 28rpx;
  color: #6a6a6a;
  line-height: 60rpx;
}

.ipt{
  width: calc(100% - 160rpx);
}

.weui-input{
  display: block;
  height: 60rpx;
  font-size: 28rpx;
}

.radio{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.radio-text{
  color: #444;
  font-size: 28rpx;
  line-height: 60rpx;
}

.radio-item{
  margin-right: 40rpx;
}

.picker-box{
  height: 60rpx;
}

.picker{
  color: #444;
  font-size: 28rpx;
  line-height: 60rpx;
}

.tag{
  width: 100rpx;
  height: 40rpx;
  background-color: #F2F2F2;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-right: 40rpx;
  color: #444;
  margin-top: 10rpx;
  border-radius: 20rpx;
}

.tag.active{
  background-color: #509BF5;
  color: #fff;
}

.check-box{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  border-radius: 50%;
}

.default-text{
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #444;
  line-height: 60rpx;
}

.save{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  background-color: #1F6FCB;
}