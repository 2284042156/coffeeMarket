
.detail{
  padding-bottom: 160rpx;
  background-color: #f5f5f5;
}

.detail-box{
  padding: 0 20rpx;
  background-color: #fff;
}
.wrap{
  text-align: center;
}
.pro{
  padding: 20rpx 0;
}

.pro-name{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #165dad;
}

.pro-like{
  width: 60rpx;
  height: 60rpx;
}

.rule-title{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.rule-tag-item{
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #E5E5E5;
  font-size: 28rpx;
  margin: 0 10rpx;
  border-radius: 30rpx;
  color: #6a6a6a;
}

.rule-tag-item.active{
  background-color: #89AFD6;
  color: #fff;
}

.rule-item{
  padding: 20rpx 0;
}

.desc{
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
}

.desc-title{
  font-size: 28rpx;
  color: #444;
  margin-bottom: 20rpx;
}

.desc-text{
  font-size: 24rpx;
  color: #6a6a6a;
  margin-bottom: 10rpx;
}

.desc-text:last-child{
  margin-bottom: 0;
}

.price-count{
  padding: 20rpx 0;
}

.price{
  color: #165dad;
  font-size: 28rpx;
  line-height: 40rpx;
}

.icon{
  width: 40rpx;
  height: 40rpx;
}

.count{
  margin: 0 20rpx;
  width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #165dad;
  line-height: 40rpx;
}

.btns{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff; 
}

.btn{
  height: 100%;
  padding: 0 20rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  color: #fff;
}

.shopcart{
  background-color: #4083D6;
}

.buy{
  background-color: #165DAD;
}