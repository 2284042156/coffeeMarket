
.swiper{
  height: 326.086rpx;
}

.swiper-img{
  height: 326.086rpx;
}

.products{
  position: fixed;
  top: 326.086rpx;
  left: 0;
  width: 100%;
  height: calc(100% - 326.086rpx);
}

.aside{
  width: 200rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.aside-item{
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #444;
  border-bottom: 1rpx solid #e8e8e8;
}

.aside-item:last-child{
  border-bottom: none;
}

.aside-item.active{
  background-color: #fff;
  color: #165dad;
}

.pro-box{
  width: calc(100% - 200rpx);
  height: 100%;
  overflow-y: auto;
  background-color: #fff;
}

.pro-img{
  width: 160rpx;
}

.pro-item{
  padding: 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.pro-text{
  width: calc(100% - 180rpx);
  margin-left: 20rpx;
}

.pro-name{
  height: 120rpx;
}

.ch-name{
  font-size: 28rpx;
  color: #444;
}

.en-name{
  font-size: 22rpx;
  color: #6a6a6a;
}

.pro-price{
  height: 40rpx;
  line-height: 40rpx;
  color: #165dad;
}