.wrap{
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: -1;
}
.wrap>image{
  width: 100%;
  height: 100%;
  opacity: 0.7;
}
.auth-btn{
  background-color: #165dad;
  margin-top: 100rpx;
  color: #fff;
}
.header {
  padding: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: white solid 10rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
